<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           stylesheets="@../css/application.css">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-gradient">
         <Button fx:id="backButton" styleClass="header-accent-button" text="← Back" />
         <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="⚡ Payment Details">
            <font>
               <Font name="System Bold" size="32.0" />
            </font>
         </Text>
         <Region HBox.hgrow="ALWAYS" />
         <HBox alignment="CENTER_RIGHT" spacing="12">
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="header-info-badge">
               <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="🔒">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Text>
               <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="Secure Payment">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
               </Text>
            </HBox>
         </HBox>
      </HBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" styleClass="background-gray-light">
         <VBox spacing="30" styleClass="background-gray-light">
            <padding>
               <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            
            <!-- Booking Summary -->
            <VBox spacing="25" styleClass="content-card,shadow-card-medium,border-yellow-light">
               <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="✈️ Booking Summary">
                  <font>
                     <Font name="System Bold" size="22.0" />
                  </font>
               </Text>
               
               <HBox spacing="25">
                  <VBox spacing="15" HBox.hgrow="ALWAYS">
                     <HBox alignment="CENTER_LEFT" spacing="20">
                        <VBox alignment="CENTER" spacing="5">
                           <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="08:30">
                              <font>
                                 <Font name="System Bold" size="18.0" />
                              </font>
                           </Text>
                           <Text fill="#7F8C8D" strokeType="OUTSIDE" strokeWidth="0.0" text="NYC">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Text>
                        </VBox>
                        <VBox alignment="CENTER" styleClass="flight-route-badge">
                           <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="→">
                              <font>
                                 <Font name="System Bold" size="16.0" />
                              </font>
                           </Text>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5">
                           <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="11:15">
                              <font>
                                 <Font name="System Bold" size="18.0" />
                              </font>
                           </Text>
                           <Text fill="#7F8C8D" strokeType="OUTSIDE" strokeWidth="0.0" text="LAX">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Text>
                        </VBox>
                     </HBox>
                     <Text fill="#7F8C8D" strokeType="OUTSIDE" strokeWidth="0.0" text="Flight PA-1234 • March 25, 2024 • 2 Passengers">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Text>
                  </VBox>
                  
                  <VBox alignment="CENTER_RIGHT" spacing="8">
                     <HBox alignment="CENTER_RIGHT" spacing="5">
                        <Text fill="#F4D03F" strokeType="OUTSIDE" strokeWidth="0.0" text="$">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Text>
                        <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="598.00">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Text>
                     </HBox>
                     <Text fill="#7F8C8D" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Amount">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
            
            <!-- Payment Method Selection -->
            <VBox spacing="25" styleClass="content-card,shadow-card-medium">
               <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="💳 Payment Method">
                  <font>
                     <Font name="System Bold" size="22.0" />
                  </font>
               </Text>
               
               <VBox spacing="20">
                  <RadioButton fx:id="creditCardRadio" selected="true" styleClass="form-label" text="Credit/Debit Card" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="paymentMethodGroup" />
                     </toggleGroup>
                  </RadioButton>
                  
                  <!-- Credit Card Form -->
                  <VBox fx:id="creditCardForm" spacing="20" styleClass="payment-card-form">
                     <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                           <Label styleClass="form-label" text="Card Number *" textFill="#2C3E50">
                              <font>
                                 <Font name="System Bold" size="14.0" />
                              </font>
                           </Label>
                           <TextField fx:id="cardNumberField" promptText="1234 5678 9012 3456" styleClass="border-gray-light,padding-15">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </TextField>
                        </VBox>
                        <VBox spacing="8">
                           <Label styleClass="form-label" text="Card Type" textFill="#2C3E50">
                              <font>
                                 <Font name="System Bold" size="14.0" />
                              </font>
                           </Label>
                           <HBox spacing="12" alignment="CENTER_LEFT">
                              <VBox alignment="CENTER" styleClass="card-type-visa">
                                 <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="💳">
                                    <font>
                                       <Font size="20.0" />
                                    </font>
                                 </Text>
                              </VBox>
                              <VBox alignment="CENTER" styleClass="card-type-mastercard">
                                 <Text fill="white" strokeType="OUTSIDE" strokeWidth="0.0" text="💳">
                                    <font>
                                       <Font size="20.0" />
                                    </font>
                                 </Text>
                              </VBox>
                           </HBox>
                        </VBox>
                     </HBox>
                     
                     <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                           <Label styleClass="form-label" text="Cardholder Name *" textFill="#2C3E50">
                              <font>
                                 <Font name="System Bold" size="14.0" />
                              </font>
                           </Label>
                           <TextField fx:id="cardholderNameField" promptText="John Smith" styleClass="border-gray-light,padding-15">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </TextField>
                        </VBox>
                        <VBox spacing="8">
                           <Label styleClass="form-label" text="Expiry Date *" textFill="#2C3E50">
                              <font>
                                 <Font name="System Bold" size="14.0" />
                              </font>
                           </Label>
                           <TextField fx:id="expiryDateField" promptText="MM/YY" style="-fx-max-width: 120;" styleClass="border-gray-light,padding-15">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </TextField>
                        </VBox>
                        <VBox spacing="8">
                           <Label styleClass="form-label" text="CVV *" textFill="#2C3E50">
                              <font>
                                 <Font name="System Bold" size="14.0" />
                              </font>
                           </Label>
                           <TextField fx:id="cvvField" promptText="123" style="-fx-max-width: 100;" styleClass="border-gray-light,padding-15">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </TextField>
                        </VBox>
                     </HBox>
                  </VBox>
                  
                  <RadioButton fx:id="paypalRadio" styleClass="form-label" text="PayPal" textFill="#2C3E50" toggleGroup="$paymentMethodGroup">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </RadioButton>
                  
                  <RadioButton fx:id="bankTransferRadio" styleClass="form-label" text="Bank Transfer" textFill="#2C3E50" toggleGroup="$paymentMethodGroup">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </RadioButton>
               </VBox>
            </VBox>
            
            <!-- Billing Address -->
            <VBox spacing="25" styleClass="content-card,shadow-card-medium">
               <HBox alignment="CENTER_LEFT" spacing="20">
                  <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="🏠 Billing Address">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Text>
                  <Region HBox.hgrow="ALWAYS" />
                  <CheckBox fx:id="sameAsContactCheckBox" selected="true" styleClass="form-label" text="Same as contact information" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </CheckBox>
               </HBox>
               
               <GridPane hgap="20" vgap="20" fx:id="billingAddressGrid">
                  <columnConstraints>
                     <ColumnConstraints hgrow="ALWAYS" />
                     <ColumnConstraints hgrow="ALWAYS" />
                  </columnConstraints>
                  
                  <VBox spacing="8" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                     <Label styleClass="form-label" text="Street Address *" textFill="#2C3E50">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <TextField fx:id="streetAddressField" promptText="123 Main Street" styleClass="border-gray-light,padding-15">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </TextField>
                  </VBox>
                  
                  <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <Label styleClass="form-label" text="City *" textFill="#2C3E50">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <TextField fx:id="cityField" promptText="New York" styleClass="border-gray-light,padding-15">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </TextField>
                  </VBox>
                  
                  <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <Label styleClass="form-label" text="State/Province *" textFill="#2C3E50">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <ComboBox fx:id="stateComboBox" maxWidth="1.7976931348623157E308" promptText="Select State" styleClass="border-gray-light,padding-15">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </ComboBox>
                  </VBox>
                  
                  <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                     <Label styleClass="form-label" text="ZIP/Postal Code *" textFill="#2C3E50">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <TextField fx:id="zipCodeField" promptText="10001" styleClass="border-gray-light,padding-15">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </TextField>
                  </VBox>
                  
                  <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <Label styleClass="form-label" text="Country *" textFill="#2C3E50">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <ComboBox fx:id="countryComboBox" maxWidth="1.7976931348623157E308" promptText="Select Country" styleClass="border-gray-light,padding-15">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </ComboBox>
                  </VBox>
               </GridPane>
            </VBox>
            
            <!-- Terms and Complete Payment -->
            <VBox spacing="25" styleClass="content-card,shadow-card-medium">
               <Text fill="#2C3E50" strokeType="OUTSIDE" strokeWidth="0.0" text="📋 Terms and Conditions">
                  <font>
                     <Font name="System Bold" size="22.0" />
                  </font>
               </Text>
               
               <VBox spacing="15">
                  <CheckBox fx:id="termsCheckBox" styleClass="form-label" text="I agree to the Terms of Service and Conditions of Carriage" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="privacyCheckBox" styleClass="form-label" text="I agree to the Privacy Policy and data processing terms" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="refundCheckBox" styleClass="form-label" text="I understand the refund and cancellation policies" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </CheckBox>
               </VBox>
               
               <Separator style="-fx-background-color: #E9ECEF;" />
               
               <HBox spacing="20">
                  <Button fx:id="cancelButton" styleClass="button-secondary" text="Cancel Booking" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="completePaymentButton" styleClass="action-button-success" text="⚡ Complete Payment - $598.00" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </HBox>
               
               <HBox alignment="CENTER" spacing="12">
                  <HBox alignment="CENTER_LEFT" spacing="8" styleClass="security-badge">
                     <Text fill="#2ECC71" strokeType="OUTSIDE" strokeWidth="0.0" text="🔒">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Text>
                     <Text fill="#2ECC71" strokeType="OUTSIDE" strokeWidth="0.0" text="Your payment is secured with 256-bit SSL encryption">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Text>
                  </HBox>
               </HBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane> 