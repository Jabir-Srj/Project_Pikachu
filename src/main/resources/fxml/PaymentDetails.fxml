<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PaymentController">
   <content>
      <VBox maxWidth="1000.0" spacing="20.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Back" />
                  <Label text="Payment Details">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- Payment Method Selection -->
            <VBox maxWidth="800.0" spacing="15.0">
               <children>
                  <Label text="Payment Method">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="10.0">
                     <children>
                        <RadioButton fx:id="creditCardRadio" mnemonicParsing="false" selected="true" text="Credit/Debit Card">
                           <toggleGroup>
                              <ToggleGroup fx:id="paymentMethodGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="paypalRadio" mnemonicParsing="false" text="PayPal" toggleGroup="$paymentMethodGroup" />
                        <RadioButton fx:id="bankTransferRadio" mnemonicParsing="false" text="Bank Transfer" toggleGroup="$paymentMethodGroup" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Credit Card Details -->
            <VBox fx:id="creditCardSection" maxWidth="800.0" spacing="15.0">
               <children>
                  <Label text="Card Information">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <VBox maxWidth="400.0" spacing="10.0">
                     <children>
                        <Label text="Card Number" />
                        <TextField fx:id="cardNumberField" maxWidth="380.0" promptText="1234 5678 9012 3456" />
                        
                        <Label text="Cardholder Name" />
                        <TextField fx:id="cardHolderField" maxWidth="380.0" promptText="Enter name on card" />
                     </children>
                  </VBox>
                  
                  <HBox spacing="20.0">
                     <children>
                        <VBox maxWidth="180.0" spacing="10.0">
                           <children>
                              <Label text="Expiry Date" />
                              <ComboBox fx:id="expiryMonthComboBox" maxWidth="160.0" promptText="Month" />
                              <ComboBox fx:id="expiryYearComboBox" maxWidth="160.0" promptText="Year" />
                           </children>
                        </VBox>
                        
                        <VBox maxWidth="180.0" spacing="10.0">
                           <children>
                              <Label text="CVV" />
                              <TextField fx:id="cvvField" maxWidth="160.0" promptText="123" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Billing Address -->
            <VBox maxWidth="800.0" spacing="15.0">
               <children>
                  <Label text="Billing Address">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="20.0">
                     <children>
                        <VBox maxWidth="350.0" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="First Name" />
                              <TextField fx:id="billingFirstNameField" maxWidth="330.0" />
                              
                              <Label text="Last Name" />
                              <TextField fx:id="billingLastNameField" maxWidth="330.0" />
                              
                              <Label text="Address Line 1" />
                              <TextField fx:id="addressLine1Field" maxWidth="330.0" />
                              
                              <Label text="Address Line 2" />
                              <TextField fx:id="addressLine2Field" maxWidth="330.0" promptText="Optional" />
                           </children>
                        </VBox>
                        
                        <VBox maxWidth="350.0" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="City" />
                              <TextField fx:id="cityField" maxWidth="330.0" />
                              
                              <Label text="State/Province" />
                              <TextField fx:id="stateField" maxWidth="330.0" />
                              
                              <Label text="ZIP/Postal Code" />
                              <TextField fx:id="zipCodeField" maxWidth="330.0" />
                              
                              <Label text="Country" />
                              <ComboBox fx:id="countryComboBox" maxWidth="330.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Order Summary -->
            <VBox maxWidth="600.0" spacing="15.0">
               <children>
                  <Label text="Order Summary">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="8.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Flight:" />
                              <Label fx:id="flightDetailsLabel" text="AA-123 New York to Los Angeles" />
                           </children>
                        </HBox>
                        
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Passengers:" />
                              <Label fx:id="passengerCountLabel" text="2 passengers" />
                           </children>
                        </HBox>
                        
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Base Price:" />
                              <Label fx:id="basePriceLabel" text="599.00" />
                           </children>
                        </HBox>
                        
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Taxes and Fees:" />
                              <Label fx:id="taxesLabel" text="89.85" />
                           </children>
                        </HBox>
                        
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Total Amount:">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="totalAmountLabel" text="688.85">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Payment Security Info -->
            <VBox maxWidth="600.0" spacing="10.0">
               <children>
                  <Label text="Security Information">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="• Your payment information is encrypted and secure" />
                        <Label text="• We do not store your credit card details" />
                        <Label text="• SSL encryption protects your transaction" />
                        <Label text="• Cancel within 24 hours for full refund" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox alignment="CENTER" maxWidth="600.0" spacing="20.0">
               <children>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="Save Payment Info">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="processPaymentButton" mnemonicParsing="false" onAction="#handleProcessPayment" text="Process Payment">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane> 