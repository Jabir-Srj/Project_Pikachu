<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
         <Button fx:id="backButton" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;" text="← Back to Bookings" />
         <Text fill="white" strokeType="OUTSIDE" strokeWidth="0.0" text="Booking Details">
            <font>
               <Font name="System Bold" size="28.0" />
            </font>
         </Text>
         <Region HBox.hgrow="ALWAYS" />
         <HBox spacing="10">
            <Button fx:id="editBookingButton" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;" text="✏️ Edit" />
            <Button fx:id="cancelBookingButton" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;" text="❌ Cancel" />
            <Button fx:id="printButton" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;" text="🖨️ Print" />
         </HBox>
      </HBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
         <VBox spacing="25" style="-fx-background-color: #ecf0f1;">
            <padding>
               <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            
            <!-- Booking Status Header -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 25;">
               <VBox spacing="5">
                  <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Booking Reference">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Text>
                  <Text fx:id="bookingReferenceLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="BK-2024-001234">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
               </VBox>
               <Separator orientation="VERTICAL" />
               <VBox spacing="5">
                  <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Status">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Text>
                  <Label fx:id="statusLabel" style="-fx-background-color: #27ae60; -fx-background-radius: 15; -fx-text-fill: white; -fx-padding: 5 15;" text="CONFIRMED">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </VBox>
               <Separator orientation="VERTICAL" />
               <VBox spacing="5">
                  <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Booking Date">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Text>
                  <Text fx:id="bookingDateLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="March 15, 2024">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Text>
               </VBox>
               <Region HBox.hgrow="ALWAYS" />
               <VBox alignment="CENTER_RIGHT" spacing="5">
                  <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Amount">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Text>
                  <Text fx:id="totalAmountLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="$1,247.50">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Text>
               </VBox>
            </HBox>
            
            <!-- Flight Information -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 25;">
               <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="✈️ Flight Information">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Text>
               
               <HBox spacing="30" alignment="CENTER_LEFT">
                  <!-- Departure -->
                  <VBox spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
                     <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="08:30">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Text>
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="March 25, 2024">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="New York (JFK)">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Text>
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Terminal 4">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                  </VBox>
                  
                  <!-- Flight Path -->
                  <VBox spacing="5" alignment="CENTER">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="AA-1234">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Text>
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="6h 45m">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Line endX="100.0" stroke="#bdc3c7" strokeWidth="2.0" />
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Direct Flight">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Boeing 787">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                  </VBox>
                  
                  <!-- Arrival -->
                  <VBox spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
                     <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="11:15">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Text>
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="March 25, 2024">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Los Angeles (LAX)">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Text>
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Terminal 1">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
            
            <!-- Passenger Information -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 25;">
               <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="👥 Passenger Information">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Text>
               
               <TableView fx:id="passengersTableView" style="-fx-background-color: transparent;">
                  <columns>
                     <TableColumn fx:id="passengerNameColumn" minWidth="200.0" text="Passenger Name" />
                     <TableColumn fx:id="seatNumberColumn" minWidth="100.0" text="Seat Number" />
                     <TableColumn fx:id="classColumn" minWidth="120.0" text="Class" />
                     <TableColumn fx:id="mealPreferenceColumn" minWidth="150.0" text="Meal Preference" />
                     <TableColumn fx:id="specialRequestsColumn" minWidth="200.0" text="Special Requests" />
                  </columns>
               </TableView>
            </VBox>
            
            <!-- Contact Information -->
            <HBox spacing="25">
               <!-- Customer Details -->
               <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 25;" HBox.hgrow="ALWAYS">
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="📞 Contact Information">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>
                  
                  <GridPane hgap="15" vgap="10">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     
                     <Label text="Customer:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <Text fx:id="customerNameLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="John Smith" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Text>
                     
                     <Label text="Email:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <Text fx:id="emailLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="john.smith@email.com" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Text>
                     
                     <Label text="Phone:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <Text fx:id="phoneLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="+1 (555) 123-4567" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Text>
                  </GridPane>
               </VBox>
               
               <!-- Payment Information -->
               <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 25;" HBox.hgrow="ALWAYS">
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="💳 Payment Information">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>
                  
                  <GridPane hgap="15" vgap="10">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     
                     <Label text="Payment Method:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <Text fx:id="paymentMethodLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Credit Card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Text>
                     
                     <Label text="Card Number:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <Text fx:id="cardNumberLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="**** **** **** 4567" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Text>
                     
                     <Label text="Transaction ID:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <Text fx:id="transactionIdLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="TXN-2024-789456" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Text>
                  </GridPane>
               </VBox>
            </HBox>
            
            <!-- Actions Panel -->
            <HBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 25;">
               <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="⚡ Quick Actions">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Text>
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="checkInButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5;" text="✓ Check In">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
               <Button fx:id="changeSeatButton" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5;" text="🪑 Change Seat">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
               <Button fx:id="requestRefundButton" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5;" text="💰 Request Refund">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
               <Button fx:id="contactSupportButton" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5;" text="🎫 Contact Support">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
            </HBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane> 