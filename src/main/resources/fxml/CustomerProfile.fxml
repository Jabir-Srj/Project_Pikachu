<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerProfileController">
    <top>
        <VBox spacing="20" styleClass="header-top-gradient">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton" styleClass="header-accent-button" text="190 Back" />
                <Text text="My Profile" styleClass="header-title">
                    <font><Font name="System Bold" size="28" /></font>
                </Text>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="25" styleClass="content-card shadow-card-medium" maxWidth="500">
            <Label text="Profile Information" styleClass="section-title" />
            <GridPane hgap="20" vgap="15">
                <Label text="Full Name:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="nameField" promptText="Full name" styleClass="form-input" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Email:" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="emailField" promptText="Email address" styleClass="form-input" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Phone:" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="phoneField" promptText="Phone number" styleClass="form-input" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Date of Birth:" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <DatePicker fx:id="dobPicker" promptText="Date of birth" styleClass="form-input" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Address:" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="addressField" promptText="Address" styleClass="form-input" GridPane.rowIndex="4" GridPane.columnIndex="1" />
            </GridPane>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="editButton" styleClass="button-primary" text="Edit" />
                <Button fx:id="saveButton" styleClass="button-success" text="Save" disable="true" />
                <Button fx:id="cancelButton" styleClass="button-secondary" text="Cancel" />
            </HBox>
        </VBox>
    </center>
</BorderPane> 