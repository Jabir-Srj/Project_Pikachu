<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SupportTicketSubmissionController">
   <content>
      <VBox maxWidth="1000.0" spacing="20.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Back" />
                  <Label text="Support Ticket Submission">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- Support Options -->
            <VBox maxWidth="800.0" spacing="15.0">
               <children>
                  <Label text="Support Options">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="10.0">
                           <children>
                              <RadioButton fx:id="submitTicketRadio" mnemonicParsing="false" selected="true" text="Submit Support Ticket">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="supportOptionsGroup" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="liveChatRadio" mnemonicParsing="false" text="Live Chat Support" toggleGroup="$supportOptionsGroup" />
                              <RadioButton fx:id="faqRadio" mnemonicParsing="false" text="Browse FAQ" toggleGroup="$supportOptionsGroup" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="10.0">
                           <children>
                              <Button fx:id="startLiveChatButton" mnemonicParsing="false" onAction="#handleStartLiveChat" text="Start Live Chat" />
                              <Button fx:id="viewFaqButton" mnemonicParsing="false" onAction="#handleViewFaq" text="View FAQ" />
                              <Button fx:id="contactInfoButton" mnemonicParsing="false" onAction="#handleContactInfo" text="Contact Information" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Ticket Form -->
            <VBox fx:id="ticketFormSection" maxWidth="800.0" spacing="15.0">
               <children>
                  <Label text="Submit a Support Ticket">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="20.0">
                     <children>
                        <VBox maxWidth="350.0" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Contact Information">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Full Name" />
                                    <TextField fx:id="fullNameField" maxWidth="330.0" promptText="Enter your full name" />
                                    
                                    <Label text="Email Address" />
                                    <TextField fx:id="emailField" maxWidth="330.0" promptText="Enter your email" />
                                    
                                    <Label text="Phone Number" />
                                    <TextField fx:id="phoneField" maxWidth="330.0" promptText="Optional" />
                                    
                                    <Label text="Customer ID" />
                                    <TextField fx:id="customerIdField" maxWidth="330.0" promptText="If available" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        
                        <VBox maxWidth="350.0" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Ticket Details">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Category" />
                                    <ComboBox fx:id="categoryComboBox" maxWidth="330.0" promptText="Select category" />
                                    
                                    <Label text="Priority" />
                                    <ComboBox fx:id="priorityComboBox" maxWidth="330.0" promptText="Select priority" />
                                    
                                    <Label text="Related Booking" />
                                    <TextField fx:id="bookingReferenceField" maxWidth="330.0" promptText="Booking reference (optional)" />
                                    
                                    <Label text="Flight Number" />
                                    <TextField fx:id="flightNumberField" maxWidth="330.0" promptText="Flight number (optional)" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <VBox maxWidth="700.0" spacing="10.0">
                     <children>
                        <Label text="Subject" />
                        <TextField fx:id="subjectField" maxWidth="680.0" promptText="Brief description of your issue" />
                        
                        <Label text="Description" />
                        <TextArea fx:id="descriptionArea" maxWidth="680.0" prefHeight="120.0" promptText="Please provide detailed information about your issue..." />
                     </children>
                  </VBox>
                  
                  <VBox maxWidth="700.0" spacing="10.0">
                     <children>
                        <Label text="Attachments">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <HBox spacing="15.0">
                           <children>
                              <Button fx:id="attachFileButton" mnemonicParsing="false" onAction="#handleAttachFile" text="Attach File" />
                              <Label fx:id="attachmentStatusLabel" text="No files attached" />
                           </children>
                        </HBox>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Supported file types: JPG, PNG, PDF, DOC, DOCX (Max 10MB each)" />
                              <Label text="Maximum 5 files per ticket" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Recent Tickets -->
            <VBox maxWidth="900.0" spacing="15.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <Label text="Your Recent Tickets">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Button fx:id="viewAllTicketsButton" mnemonicParsing="false" onAction="#handleViewAllTickets" text="View All Tickets" />
                     </children>
                  </HBox>
                  
                  <TableView fx:id="recentTicketsTableView" maxWidth="850.0" prefHeight="150.0">
                     <columns>
                        <TableColumn fx:id="ticketIdColumn" prefWidth="100.0" text="Ticket ID" />
                        <TableColumn fx:id="ticketSubjectColumn" prefWidth="200.0" text="Subject" />
                        <TableColumn fx:id="ticketCategoryColumn" prefWidth="120.0" text="Category" />
                        <TableColumn fx:id="ticketStatusColumn" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="ticketPriorityColumn" prefWidth="80.0" text="Priority" />
                        <TableColumn fx:id="ticketDateColumn" prefWidth="120.0" text="Created" />
                        <TableColumn fx:id="lastUpdateColumn" prefWidth="120.0" text="Last Update" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
            
            <!-- Quick Help -->
            <VBox maxWidth="700.0" spacing="15.0">
               <children>
                  <Label text="Quick Help">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Common Issues:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        
                        <HBox spacing="15.0">
                           <children>
                              <Button fx:id="bookingIssuesButton" mnemonicParsing="false" onAction="#handleBookingIssues" text="Booking Issues" />
                              <Button fx:id="paymentProblemsButton" mnemonicParsing="false" onAction="#handlePaymentProblems" text="Payment Problems" />
                              <Button fx:id="flightChangesButton" mnemonicParsing="false" onAction="#handleFlightChanges" text="Flight Changes" />
                              <Button fx:id="refundRequestsButton" mnemonicParsing="false" onAction="#handleRefundRequests" text="Refund Requests" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Self-Service Options:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        
                        <HBox spacing="15.0">
                           <children>
                              <Button fx:id="checkInButton" mnemonicParsing="false" onAction="#handleCheckIn" text="Online Check-in" />
                              <Button fx:id="managBookingButton" mnemonicParsing="false" onAction="#handleManageBooking" text="Manage Booking" />
                              <Button fx:id="flightStatusButton" mnemonicParsing="false" onAction="#handleFlightStatus" text="Flight Status" />
                              <Button fx:id="baggageInfoButton" mnemonicParsing="false" onAction="#handleBaggageInfo" text="Baggage Info" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Contact Information -->
            <VBox maxWidth="700.0" spacing="15.0">
               <children>
                  <Label text="Alternative Contact Methods">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="10.0">
                     <children>
                        <HBox spacing="20.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Phone Support">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label text="1-800-PIKACHU (1-800-745-2248)" />
                                    <Label text="Available 24/7" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Email Support">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label text="support@pikachuairlines.com" />
                                    <Label text="Response within 24 hours" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        
                        <HBox spacing="20.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Emergency Assistance">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label text="1-800-EMERGENCY" />
                                    <Label text="Available 24/7 for urgent travel issues" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Social Media">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label text="@PikachuAirlines on Twitter" />
                                    <Label text="Quick responses during business hours" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox alignment="CENTER" maxWidth="600.0" spacing="20.0">
               <children>
                  <Button fx:id="clearFormButton" mnemonicParsing="false" onAction="#handleClearForm" text="Clear Form">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="saveDraftButton" mnemonicParsing="false" onAction="#handleSaveDraft" text="Save Draft">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="submitTicketButton" mnemonicParsing="false" onAction="#handleSubmitTicket" text="Submit Ticket">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane> 