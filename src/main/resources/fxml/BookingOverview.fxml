<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 30;">
         <!-- Header -->
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Text fill="white" strokeType="OUTSIDE" strokeWidth="0.0" text="Booking Overview">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="newBookingButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5;" text="+ New Booking">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="exportButton" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5;" text="ðŸ“Š Export">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </HBox>
         
         <!-- Search and Filter Bar -->
         <HBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label text="Search Bookings" textFill="#2c3e50">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="searchField" promptText="Search by booking ID, customer name, or flight..." style="-fx-background-radius: 5; -fx-border-color: #e0e6ed; -fx-border-radius: 5; -fx-padding: 10;">
                  <font>
                     <Font size="14.0" />
                  </font>
               </TextField>
            </VBox>
            
            <VBox spacing="5">
               <Label text="Status" textFill="#2c3e50">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <ComboBox fx:id="statusFilterComboBox" promptText="All Status" style="-fx-background-radius: 5; -fx-border-color: #e0e6ed; -fx-border-radius: 5; -fx-min-width: 150;">
                  <font>
                     <Font size="14.0" />
                  </font>
               </ComboBox>
            </VBox>
            
            <VBox spacing="5">
               <Label text="Date Range" textFill="#2c3e50">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <ComboBox fx:id="dateRangeComboBox" promptText="Last 30 days" style="-fx-background-radius: 5; -fx-border-color: #e0e6ed; -fx-border-radius: 5; -fx-min-width: 150;">
                  <font>
                     <Font size="14.0" />
                  </font>
               </ComboBox>
            </VBox>
            
            <VBox alignment="BOTTOM_CENTER" spacing="5">
               <Label text=" " />
               <Button fx:id="searchButton" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;" text="ðŸ” Search">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
            </VBox>
            
            <VBox alignment="BOTTOM_CENTER" spacing="5">
               <Label text=" " />
               <Button fx:id="clearButton" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;" text="Clear">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Button>
            </VBox>
         </HBox>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="20" style="-fx-background-color: #ecf0f1;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         
         <!-- Statistics Summary -->
         <HBox spacing="20">
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 20;" HBox.hgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Text fill="#3498db" strokeType="OUTSIDE" strokeWidth="0.0" text="ðŸ“‹">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="2">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Bookings">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fx:id="totalBookingsLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="1,245">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
            
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 20;" HBox.hgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Text fill="#27ae60" strokeType="OUTSIDE" strokeWidth="0.0" text="âœ…">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="2">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Confirmed">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fx:id="confirmedBookingsLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="1,089">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
            
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 20;" HBox.hgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Text fill="#f39c12" strokeType="OUTSIDE" strokeWidth="0.0" text="â³">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="2">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Pending">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fx:id="pendingBookingsLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="78">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
            
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 20;" HBox.hgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Text fill="#e74c3c" strokeType="OUTSIDE" strokeWidth="0.0" text="âŒ">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="2">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Cancelled">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fx:id="cancelledBookingsLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="78">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
         </HBox>
         
         <!-- Bookings Table -->
         <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);">
            <padding>
               <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Recent Bookings">
                  <font>
                     <Font name="System Bold" size="20.0" />
                  </font>
               </Text>
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="refreshButton" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8; -fx-background-radius: 5;" text="ðŸ”„ Refresh">
                  <font>
                     <Font size="12.0" />
                  </font>
               </Button>
            </HBox>
            
            <TableView fx:id="bookingsTableView" style="-fx-background-color: transparent;">
               <columns>
                  <TableColumn fx:id="bookingIdColumn" minWidth="100.0" text="Booking ID" />
                  <TableColumn fx:id="customerNameColumn" minWidth="150.0" text="Customer Name" />
                  <TableColumn fx:id="flightNumberColumn" minWidth="120.0" text="Flight Number" />
                  <TableColumn fx:id="routeColumn" minWidth="180.0" text="Route" />
                  <TableColumn fx:id="departureDateColumn" minWidth="120.0" text="Departure Date" />
                  <TableColumn fx:id="passengersColumn" minWidth="80.0" text="Passengers" />
                  <TableColumn fx:id="statusColumn" minWidth="100.0" text="Status" />
                  <TableColumn fx:id="totalAmountColumn" minWidth="100.0" text="Total Amount" />
                  <TableColumn fx:id="actionsColumn" minWidth="120.0" text="Actions" />
               </columns>
            </TableView>
            
            <!-- Pagination -->
            <HBox alignment="CENTER" spacing="15">
               <Button fx:id="previousPageButton" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8; -fx-background-radius: 5;" text="â† Previous" />
               <Label fx:id="pageInfoLabel" text="Page 1 of 25" textFill="#2c3e50">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <Button fx:id="nextPageButton" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8; -fx-background-radius: 5;" text="Next â†’" />
               <Region HBox.hgrow="ALWAYS" />
               <Label text="Show:" textFill="#2c3e50">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <ComboBox fx:id="pageSizeComboBox" value="25" style="-fx-background-radius: 5; -fx-border-color: #e0e6ed; -fx-border-radius: 5;">
                  <font>
                     <Font size="14.0" />
                  </font>
               </ComboBox>
               <Label text="entries" textFill="#2c3e50">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </HBox>
         </VBox>
      </VBox>
   </center>
</BorderPane> 