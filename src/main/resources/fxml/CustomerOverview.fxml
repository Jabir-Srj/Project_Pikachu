<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 30;">
         <!-- Header -->
         <HBox alignment="CENTER_LEFT" spacing="15">
            <Text fill="white" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer Management">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addCustomerButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5;" text="+ Add Customer">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="exportButton" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5;" text="📊 Export">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </HBox>
         
         <!-- Search Bar -->
         <HBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label text="Search Customers" textFill="#2c3e50">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="searchField" promptText="Search by name, email, phone, or customer ID..." style="-fx-background-radius: 5; -fx-border-color: #e0e6ed; -fx-border-radius: 5; -fx-padding: 10;">
                  <font>
                     <Font size="14.0" />
                  </font>
               </TextField>
            </VBox>
            
            <VBox spacing="5">
               <Label text="Customer Type" textFill="#2c3e50">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <ComboBox fx:id="customerTypeComboBox" promptText="All Types" style="-fx-background-radius: 5; -fx-border-color: #e0e6ed; -fx-border-radius: 5; -fx-min-width: 150;">
                  <font>
                     <Font size="14.0" />
                  </font>
               </ComboBox>
            </VBox>
            
            <VBox spacing="5">
               <Label text="Registration Date" textFill="#2c3e50">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <ComboBox fx:id="dateRangeComboBox" promptText="All Time" style="-fx-background-radius: 5; -fx-border-color: #e0e6ed; -fx-border-radius: 5; -fx-min-width: 150;">
                  <font>
                     <Font size="14.0" />
                  </font>
               </ComboBox>
            </VBox>
            
            <VBox alignment="BOTTOM_CENTER" spacing="5">
               <Label text=" " />
               <Button fx:id="searchButton" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5;" text="🔍 Search">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
            </VBox>
         </HBox>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="20" style="-fx-background-color: #ecf0f1;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         
         <!-- Statistics -->
         <HBox spacing="20">
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 20;" HBox.hgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Text fill="#3498db" strokeType="OUTSIDE" strokeWidth="0.0" text="👥">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="2">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Customers">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fx:id="totalCustomersLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="15,642">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
            
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 20;" HBox.hgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Text fill="#27ae60" strokeType="OUTSIDE" strokeWidth="0.0" text="✨">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="2">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Active This Month">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fx:id="activeCustomersLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="3,247">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
            
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 20;" HBox.hgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Text fill="#f39c12" strokeType="OUTSIDE" strokeWidth="0.0" text="🆕">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="2">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="New This Week">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fx:id="newCustomersLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="127">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
            
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-padding: 20;" HBox.hgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Text fill="#9b59b6" strokeType="OUTSIDE" strokeWidth="0.0" text="⭐">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <VBox spacing="2">
                     <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="VIP Members">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Text>
                     <Text fx:id="vipCustomersLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="892">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                     </Text>
                  </VBox>
               </HBox>
            </VBox>
         </HBox>
         
         <!-- Customer Table -->
         <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);">
            <padding>
               <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer List">
                  <font>
                     <Font name="System Bold" size="20.0" />
                  </font>
               </Text>
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="refreshButton" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8; -fx-background-radius: 5;" text="🔄 Refresh">
                  <font>
                     <Font size="12.0" />
                  </font>
               </Button>
            </HBox>
            
            <TableView fx:id="customersTableView" style="-fx-background-color: transparent;">
               <columns>
                  <TableColumn fx:id="customerIdColumn" minWidth="100.0" text="Customer ID" />
                  <TableColumn fx:id="fullNameColumn" minWidth="180.0" text="Full Name" />
                  <TableColumn fx:id="emailColumn" minWidth="200.0" text="Email Address" />
                  <TableColumn fx:id="phoneColumn" minWidth="130.0" text="Phone Number" />
                  <TableColumn fx:id="registrationDateColumn" minWidth="120.0" text="Registration Date" />
                  <TableColumn fx:id="totalBookingsColumn" minWidth="100.0" text="Total Bookings" />
                  <TableColumn fx:id="customerTypeColumn" minWidth="100.0" text="Customer Type" />
                  <TableColumn fx:id="lastActivityColumn" minWidth="120.0" text="Last Activity" />
                  <TableColumn fx:id="actionsColumn" minWidth="120.0" text="Actions" />
               </columns>
            </TableView>
            
            <!-- Pagination -->
            <HBox alignment="CENTER" spacing="15">
               <Button fx:id="previousPageButton" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8; -fx-background-radius: 5;" text="← Previous" />
               <Label fx:id="pageInfoLabel" text="Page 1 of 157" textFill="#2c3e50">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <Button fx:id="nextPageButton" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8; -fx-background-radius: 5;" text="Next →" />
               <Region HBox.hgrow="ALWAYS" />
               <Label text="Show:" textFill="#2c3e50">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <ComboBox fx:id="pageSizeComboBox" value="100" style="-fx-background-radius: 5; -fx-border-color: #e0e6ed; -fx-border-radius: 5;">
                  <font>
                     <Font size="14.0" />
                  </font>
               </ComboBox>
               <Label text="entries" textFill="#2c3e50">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </HBox>
         </VBox>
      </VBox>
   </center>
</BorderPane> 